    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/web_project/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver"
            ],
            "django": true, // enable debugging of Django page templates
            "subProcess": true // for debugging
        }
    ]
}